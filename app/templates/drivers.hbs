{{nav-bar}}

<div class="center">
    {{#link-to 'drivers/add'}}
        <div class="button">Add Driver</div>
    {{/link-to}}

    <table class="table table-hover table-high">
        <thead>
        <tr>
            <th class="col-xs-4">First Name</th>
            <th class="col-xs-4">Last Name</th>
            <th class="col-xs-4">License</th>

        </tr>
        </thead>
        <tbody>

        {{#each driver in model}}
            {{#link-to 'drivers/view' driver.id}}
                <td class=" valign-middle">
                    {{driver.first_name}}
                </td>
                <td class=" valign-middle">
                    {{driver.last_name}}
                </td>
                <td class=" valign-middle">
                    {{driver.license_number}}
                </td>
            {{/link-to}}
        {{/each}}
        </tbody>
    </table>
</div>