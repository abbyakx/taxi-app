{{nav-bar}}



    {{#link-to 'schedules/add'}}
    <div class ="button">Add Schedule</div>
    {{/link-to}}


    <table class="table table-hover table-high">
        <thead>
        <tr>
            <th class="col-xs-3">Driver Name</th>
            <th class="col-xs-3">Start Time</th>
            <th class="col-xs-3">End Time</th>
            <th class="col-xs-3">Vehicle</th>
        </tr>
        </thead>
        <tbody>
        {{#each schedule in model}}
        {{#link-to 'schedules/view' schedule.id}}
            <td class=" valign-middle">
                {{schedule.driver_name}}
            </td>
            <td class=" valign-middle">
                {{schedule.start_time}}
            </td>
            <td class=" valign-middle">
                {{schedule.end_time}}
            </td>
            {{#if schedule.vehicle_id}}
                <td class="valign-middle">
                    {{schedule.vehicle_id}}
                </td>
            {{else }}
                <td>
                </td>
            {{/if}}
        {{/link-to}}
        {{/each}}
        </tbody>
    </table>




