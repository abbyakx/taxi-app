{{nav-bar}}
<div class="center">
    {{#link-to 'vehicles/add'}}
        <div class="button">Add Vehicle</div>
    {{/link-to}}

    <table class="table table-hover table-high">
        <thead>
        <tr>
            <th class="col-xs-4">Plate Number</th>
            <th class="col-xs-4">Make</th>
            <th class="col-xs-4">Model</th>
        </tr>
        </thead>
        <tbody>
        {{#each vehicle in model}}
            {{#link-to 'vehicles/view' vehicle.id}}
                <td class=" valign-middle">
                    {{vehicle.plate_number}}
                </td>
                <td class=" valign-middle">
                    {{vehicle.make}}
                </td>
                <td class=" valign-middle">
                    {{vehicle.model}}
                </td>
            {{/link-to}}
        {{/each}}
        </tbody>
    </table>
</div>