{{nav-bar}}
<div class=center>
    {{#link-to 'vehicles'}}
        <div class="button">Back</div>
    {{/link-to}}
    <div class="row col-md-6">
        <div class="form-group has-feedback required">
            <label>Plate Number</label>
            {{input value=vehicle.plate_number type='string' class='form-control' placeholder='Plate Number'}}

        </div>
    </div>
    <div class="row col-md-6">
        <div class="form-group has-feedback required">
            <label>Make</label>
            {{input value=vehicle.make type='string' class='form-control' placeholder='Make'}}

        </div>
    </div>
    <div class="row col-md-6">
        <div class="form-group has-feedback required">
            <label>Model</label>
            {{input value=vehicle.model type='string' class='form-control' placeholder='Model'}}

        </div>
    </div>
    <div class="button"  {{action "save" }}>Save</div>
</div>